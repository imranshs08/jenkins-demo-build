pipeline {
    agent any 
    
    environment{
        PATH="/usr/share/maven:$PATH"
    }
    stages {
        stage("Git Checkout"){
            steps{
                git 'https://github.com/javahometech/myweb'
            }
        }
        stage("Maven Build"){
            steps{
              sh "mvn clean package"  
            }
        }
        stage("Deploy"){
            steps{
             sh """
             sh "mv /var/lib/jenkins/workspace/declarativepipeline/target/*.war /opt/tomcat/apache-tomcat-9.0.73/webapps/"
             sh "tomcatdown"
             sh "tomcatup"
             """
            }
        }
    }
}
